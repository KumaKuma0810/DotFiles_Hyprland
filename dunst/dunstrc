    background = "#1e1b39"
    foreground = "#cedbf0"
    frame_color = "#5A84BD"
    timeout = 0
    override_pause_level = 60
    default_icon = dialog-warning

[rule_cmus]
    background = "#010710"
    foreground = "#cedbf0"
    frame_color = "#899EB9"
    appname = "cmus"
    urgency = low
    timeout = 1


[Firefox]
    appname = "firefox"
